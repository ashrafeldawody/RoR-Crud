<h1>New post</h1>
<%= form_with model: @posts,url: posts_path do |form| %>
  <div class="form">
    <div class="mt-3">
      <%= form.label :title , class: "form-label" %>
      <%= form.text_field :title, required: true , class: "form-control" %>
      <div class="text-danger">
        <%= @post.errors.full_messages_for(:title).join(', ') if @post.errors.has_key?(:title) %>
      </div>
    </div>
    <div class="mt-3">
      <%= form.label :description , class: "form-label" %>
      <%= form.text_area :description, required: true , class: "form-control", rows:10 %>

        <div class="text-danger">
          <%= @post.errors.full_messages_for(:description).join(', ') if @post.errors.has_key?(:description) %>
        </div>

    </div>
    <%= form.submit "Create" , class:"btn btn-primary mt-4 " %>
<% end %>
</div>
