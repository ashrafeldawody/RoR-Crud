<h1>Register</h1>
<%= form_with model: @user, url: register_path do |form| %>
  <div class="form">
    <div class="mt-3">
      <%= form.label :name , class: "form-label" %>
      <%= form.text_field :name, required: true , class: "form-control" %>
      <div class="text-danger">
        <%= @user.errors.full_messages_for(:name).join(', ') if @user.errors.has_key?(:name) %>
      </div>
    </div>
    <div class="mt-3">
      <%= form.label :email , class: "form-label" %>
      <%= form.email_field :email, required: true , class: "form-control" %>
      <div class="text-danger">
        <%= @user.errors.full_messages_for(:email).join(', ') if @user.errors.has_key?(:email) %>
      </div>
    </div>
    <div class="mt-3">
      <%= form.label :password, class: "form-label" %>
      <%= form.password_field :password, required: true , class: "form-control" %>
      <div class="text-danger">
        <%= @user.errors.full_messages_for(:password).join(', ') if @user.errors.has_key?(:password) %>
      </div>
    </div>
    <div class="mt-3">
      <%= form.label :password_confirmation, class: "form-label" %>
      <%= form.password_field :password_confirmation, required: true , class: "form-control" %>
      <div class="text-danger">
        <%= @user.errors.full_messages_for(:password_confirmation).join(', ') if @user.errors.has_key?(:password_confirmation) %>
      </div>
    </div>
  <%= form.submit "Sign Up" , class:"btn btn-primary mt-4 " %>
<% end %>
</div>
