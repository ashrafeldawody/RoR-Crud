<h1>Edit post</h1>
<%= form_for @post ,url: {action: :update}  do |form| %>
  <div class="form">
    <div class="mt-3">
      <%= form.label :title , class: "form-label" %>
      <%= form.text_field :title, required: true , class: "form-control" %>

    </div>
    <div class="mt-3">
      <%= form.label :description , class: "form-label" %>
      <%= form.text_area :description, required: true , class: "form-control", rows:10 %>


    </div>
    <%= form.submit "Edit" , class:"btn btn-primary mt-4 " %>
<% end %>
</div>
